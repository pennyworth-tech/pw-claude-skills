{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://pennyworth.dev/schemas/skills/web-component-testing/output.json",
  "title": "Web Component Testing Skill Output Schema",
  "description": "Output schema for web-component-testing skill with Testing Library analysis",
  "type": "object",
  "required": ["skillName", "version", "timestamp", "status", "trustTier", "output"],
  "properties": {
    "skillName": { "const": "web-component-testing" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "timestamp": { "type": "string", "format": "date-time" },
    "status": { "enum": ["success", "partial", "failed", "skipped"] },
    "trustTier": { "type": "integer", "minimum": 0, "maximum": 3 },
    "output": {
      "type": "object",
      "required": ["summary", "findings", "testResults"],
      "properties": {
        "summary": { "type": "string", "minLength": 10 },
        "testResults": {
          "type": "object",
          "properties": {
            "total": { "type": "integer" },
            "passed": { "type": "integer" },
            "failed": { "type": "integer" },
            "skipped": { "type": "integer" },
            "coverage": { "type": "number", "minimum": 0, "maximum": 100 },
            "framework": { "enum": ["react", "vue", "angular", "svelte", "web-components"] }
          }
        },
        "findings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "title", "severity"],
            "properties": {
              "id": { "type": "string", "pattern": "^COMP-\\d{3}$" },
              "title": { "type": "string" },
              "severity": { "enum": ["critical", "high", "medium", "low", "info"] },
              "category": {
                "enum": ["user-events", "queries", "accessibility", "async-handling", "mocking", "state-management", "props-testing", "rendering"]
              }
            }
          }
        },
        "recommendations": { "type": "array" },
        "bestPractices": {
          "type": "object",
          "properties": {
            "userCentricQueries": { "type": "boolean" },
            "avoidImplementationDetails": { "type": "boolean" },
            "properAsyncHandling": { "type": "boolean" }
          }
        }
      }
    },
    "metadata": { "type": "object" },
    "validation": { "type": "object" }
  }
}
