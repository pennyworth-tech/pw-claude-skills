{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://pennyworth.dev/schemas/skills/contract-change-validator/output.json",
  "title": "Contract Change Validator Output Schema",
  "description": "Output schema for contract-change-validator skill with congruence scoring and AISP quality gates",
  "type": "object",
  "required": ["skillName", "version", "timestamp", "status", "trustTier", "output"],
  "properties": {
    "skillName": { "const": "contract-change-validator" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "timestamp": { "type": "string", "format": "date-time" },
    "status": { "enum": ["success", "partial", "failed", "skipped"] },
    "trustTier": { "type": "integer", "minimum": 0, "maximum": 3 },
    "output": {
      "type": "object",
      "required": ["targetPath", "analysisType", "summary", "contracts", "congruenceIssues", "qualityGates"],
      "properties": {
        "targetPath": { "type": "string", "minLength": 1 },
        "analysisType": { "enum": ["extract", "diff", "both"] },
        "summary": {
          "type": "object",
          "required": ["totalContracts", "byType", "congruenceScore"],
          "properties": {
            "totalContracts": { "type": "integer", "minimum": 0 },
            "byType": {
              "type": "object",
              "required": ["restApi", "dataDefinitions", "testData", "events", "urlConfig", "libraryVersions"],
              "properties": {
                "restApi": { "type": "integer", "minimum": 0 },
                "dataDefinitions": { "type": "integer", "minimum": 0 },
                "testData": { "type": "integer", "minimum": 0 },
                "events": { "type": "integer", "minimum": 0 },
                "urlConfig": { "type": "integer", "minimum": 0 },
                "libraryVersions": { "type": "integer", "minimum": 0 }
              }
            },
            "breakingChanges": { "type": "integer", "minimum": 0 },
            "missedUpdates": { "type": "integer", "minimum": 0 },
            "congruenceScore": { "type": "number", "minimum": 0, "maximum": 100 },
            "note": { "type": "string" }
          }
        },
        "contracts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "source", "data"],
            "properties": {
              "type": { "enum": ["rest-api", "data-definition", "test-data", "event", "url-config", "library-version"] },
              "source": { "type": "string" },
              "data": { "type": "object" }
            }
          }
        },
        "changes": {
          "type": "object",
          "properties": {
            "baseBranch": { "type": "string" },
            "added": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["type", "source", "detail"],
                "properties": {
                  "type": { "type": "string" },
                  "source": { "type": "string" },
                  "detail": { "type": "string" }
                }
              }
            },
            "removed": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["type", "source", "detail"],
                "properties": {
                  "type": { "type": "string" },
                  "source": { "type": "string" },
                  "detail": { "type": "string" }
                }
              }
            },
            "modified": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["type", "source", "detail", "breaking"],
                "properties": {
                  "type": { "type": "string" },
                  "source": { "type": "string" },
                  "detail": { "type": "string" },
                  "breaking": { "type": "boolean" }
                }
              }
            },
            "breaking": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["type", "source", "changeType", "impact", "detail"],
                "properties": {
                  "type": { "type": "string" },
                  "source": { "type": "string" },
                  "changeType": { "type": "string" },
                  "impact": { "enum": ["high", "medium", "low"] },
                  "detail": { "type": "string" },
                  "migrationNote": { "type": "string" }
                }
              }
            }
          }
        },
        "congruenceIssues": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "severity", "source", "target", "message"],
            "properties": {
              "type": { "type": "string" },
              "severity": { "enum": ["HIGH", "MEDIUM", "LOW"] },
              "source": { "type": "string" },
              "target": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        },
        "qualityGates": {
          "type": "object",
          "required": ["contractsCovered", "breakingChangesDocumented", "congruenceScore", "tier", "rulesPassed", "rulesTotal"],
          "properties": {
            "contractsCovered": {
              "type": "object",
              "required": ["pass", "actual", "threshold"],
              "properties": {
                "pass": { "type": "boolean" },
                "actual": { "type": "integer", "minimum": 0, "maximum": 6 },
                "threshold": { "const": 4 },
                "found": { "type": "array", "items": { "type": "string" } },
                "missing": { "type": "array", "items": { "type": "string" } }
              }
            },
            "breakingChangesDocumented": {
              "type": "object",
              "required": ["pass", "actual", "total"],
              "properties": {
                "pass": { "type": "boolean" },
                "actual": { "type": "integer", "minimum": 0 },
                "total": { "type": "integer", "minimum": 0 }
              }
            },
            "congruenceScore": {
              "type": "object",
              "required": ["pass", "actual", "threshold"],
              "properties": {
                "pass": { "type": "boolean" },
                "actual": { "type": "number", "minimum": 0, "maximum": 100 },
                "threshold": { "const": 80 }
              }
            },
            "tier": { "enum": ["gold", "silver", "bronze"] },
            "rulesPassed": { "type": "integer", "minimum": 0, "maximum": 3 },
            "rulesTotal": { "const": 3 }
          }
        },
        "recommendations": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "metadata": { "type": "object" },
    "validation": { "type": "object" }
  }
}
